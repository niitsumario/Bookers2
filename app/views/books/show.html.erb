<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/user', user: @user, book_new: @book_new %>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
  		      <td>
  		        <%= link_to (attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg"), user_path(@book.user) %>
  		        <%= link_to @user.name, user_path(@user.id) %>
  		      </td>
  		      <td>
  		        <%= link_to @book.title, book_path(@book.id) %>
  		      </td>
  		      <td>
  		        <%= @book.body %>
  		      </td>
  		      <td id="favorite-btn">
  		        <%= render 'favorites/favo', book: @book %>
  		      </td>
  		      <td>
  		        <div class="comments">
  		          <p>コメント数：<%= @book.book_comments.count %></p>
  		        </div>
  		      </td>
            <td>
              <% if @book.user == current_user %>
               <%= link_to "Edit", edit_book_path(@book) %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
               <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"} %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="comments">
        <% @book.book_comments.each do |book_comment| %>
          <p><%= image_tag('no_image.jpeg') %>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
          <div class="comment-delete">
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
          </div>
          <% end %>
          </p>
        <% end %>
      </div>
      <div class="new_comment">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "comment" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>