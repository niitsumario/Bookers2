<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/user', user: @user, book_new: @book_new %>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
  		      <td>
  		        <%= link_to (attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg"), user_path(@book.user) %>
  		        <%= link_to @user.name, user_path(@user.id) %>
  		      </td>
  		      <td>
  		        <%= link_to @book.title, book_path(@book.id) %>
  		      </td>
  		      <td>
  		        <%= @book.body %>
  		      </td>
  		      <td id="favorite-btn">
  		        <%= render 'favorites/favo', book: @book %>
  		      </td>
  		      <td>
  		        <div class="comments">
  		          <p>コメント数：<%= @book.book_comments.count %></p>
  		        </div>
  		      </td>
            <td>
              <% if @book.user == current_user %>
               <%= link_to "Edit", edit_book_path(@book) %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
               <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"} %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div id="comments_area">
        <%= render 'book_comments/index', book: @book %>
      </div>
        <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>