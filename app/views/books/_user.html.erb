<div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= render 'users/stats', user: @user %>
      <%= render 'users/follow_form', user: @user %>
      <div class="row">
        <a><%= link_to "", edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <% if book_new.errors.any? %>
        <%= book_new.errors.count %>error
        <% book_new.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_with model: book_new, local:true do |f| %>
       <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_field :title, class:"form-control" %>
       </div>
       <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, class:"form-control" %>
       </div>
       <div class="form-group">
         <%= f.submit 'Create Book', class:"btn btn-success" %>
       </div>
      <% end %>
    </div>